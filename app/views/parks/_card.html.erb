<div class="card mb-3">
  <h2 class="card-header h4">
    Park #<%= park.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Park name</dt>
      <!-- Display park_name start -->
      <dd><%= park.park_name %></dd>
      <!-- Display park_name end -->

      <dt>Park address</dt>
      <!-- Display park_address start -->
      <dd><%= park.park_address %></dd>
      <!-- Display park_address end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back park, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link park start -->
      <div class="col">
        <%= link_to edit_park_url(park), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link park end -->

      <!-- Delete link park start -->
      <div class="col">
        <%= link_to park, method: :delete, data: { confirm: "Do you really want to delete this park?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link park end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(park.updated_at) %> ago
  </div>
</div>
